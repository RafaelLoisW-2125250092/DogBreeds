<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="#2E5850">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Selamat Datang"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_ket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's find your soulmate"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dogbreeds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item_dogbreeds"
        android:layout_below="@+id/tv_ket"/>


    <ProgressBar
        android:id="@+id/pb_dogbreeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>